<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="16dp" android:paddingRight="16dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layoutItemCampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:id="@+id/txtNomeCampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samambaia"
            android:textSize="20sp" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setor"
            android:text="Setor Universitario"
            android:textColor="#ff9b9b9b"
            />

        <TextView
            android:id="@+id/txtCidadeCampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goiania"
            android:textColor="#ff9b9b9b" />



        <View
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_height="1px"
            android:background="#ff888888"/>


    </LinearLayout>



</RelativeLayout>